@{
    Layout = null;
    var usuario = Session["ClienteNombre"] ?? "Admin";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PrincipalAdmin.css" rel="stylesheet" />
    <style>
        
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <div class="text-center mb-4">
                    <img src="/Imagenes/logo.png" alt="logo" class="img-fluid" style="max-height: 100px;" />
                </div>
                <a href="@Url.Action("Index", "Admin")" class="@(ViewBag.Menu == "Dashboard" ? "active" : "")">Dashboard</a>
                <a href="@Url.Action("ListaProductos", "AdminProducto")" class="@(ViewBag.Menu == "Productos" ? "active" : "")">Productos</a>
                <a href="#" class="@(ViewBag.Menu == "Clientes" ? "active" : "")">Clientes</a>
                <a href="#" class="@(ViewBag.Menu == "Pedidos" ? "active" : "")">Pedidos</a>
                <a href="@Url.Action("CerrarSesion", "Usuario")">Cerrar sesión</a>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 p-4">
                <div class="topbar d-flex justify-content-between mb-4">
                    <h3>@ViewBag.Title</h3>
                    <span class="text-muted">👤 @usuario</span>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>
    @Html.Partial("_SweetAlert")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
