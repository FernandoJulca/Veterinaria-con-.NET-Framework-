<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="main-nav">
        <div class="centrar">
            <a href="@Url.Action("Index","Home")" class="centrar">
                <img src="/Imagenes/logo.png" alt="logo" class="logo" />
            </a>
        </div>
        <button id="menu-toggle" class="menu-toggle">X</button>
        <div class="centrar nav-container" id="menu">
            <a href="#" class="nav-item" data-toggle="modal" data-target="#carritoModal">
                <i class="fa-solid fa-cart-shopping"></i>
                <span id="cart-item-count" class="counter-items">0</span>
            </a>
            <a href="@Url.Action("Index", "Home")" class="nav-item">Inicio</a>
            <a href="@Url.Action("Nosotros", "Home")" class="nav-item">Nosotros</a>
            <a href="@Url.Action("Productos", "Producto")" class="nav-item">Catálogo</a>
            <a href="@Url.Action("Sedes", "Home")" class="nav-item">Sedes</a>
            <a href="@Url.Action("Contact", "Home")" class="nav-item">Agendar Cita</a>
            @if (Session["ClienteNombre"] == null)
            {
                <a>
                    @Html.ActionLink("Iniciar Sesión", "IniciarSesion", "Usuario", null, new { @class = "nav-item" })
                </a>
            }
            else
            {
                <a>
                    @Html.ActionLink(Session["ClienteNombre"].ToString(), "Perfil", "Usuario", null, new { @class = "nav-item" })
                </a>
                <a>
                    @Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Usuario", null, new { @class = "nav-item" })
                </a>
            }
        </div>
    </nav>
    <div class="modal fade" id="carritoModal" tabindex="-1" role="dialog" aria-labelledby="carritoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="carritoModalLabel">Tu Carrito de Compras</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span id="count-items" aria-hidden="true">X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="list-group" id="cart-items-list">
                        <!-- Los productos se agregarán dinámicamente aquí -->
                    </ul>
                    <hr>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <a href="@Url.Action("ConfirmSale", "Compra")" class="btn ">Proceder al Pago</a>
                </div>
            </div>
        </div>
    </div>
    <div class="banner">
    </div>

    <div class="">
        @RenderBody()
    </div>
    <footer class="bg-dark text-light pt-5 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <a href="@Url.Action("Index","Home")" class="d-inline-block mb-3">
                        <img src="/Imagenes/logo.png" alt="logo Miau&Guau" ">
                    </a>
                    <p class="small fst-italic">
                        Amamos cuidar de tus mejores amigos. Productos y servicios de calidad para tus mascotas.
                    </p>
                </div>

                <div class="col-md-3 mb-4">
                    <h5 class="mb-3">Enlaces Rápidos</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-light text-decoration-none">Inicio</a></li>
                        <li><a href="@Url.Action("Nosotros", "Home")" class="text-light text-decoration-none">Nosotros</a></li>
                        <li><a href="@Url.Action("Productos", "Producto")" class="text-light text-decoration-none">Catálogo</a></li>
                        <li><a href="@Url.Action("Sedes", "Home")" class="text-light text-decoration-none">Sedes</a></li>
                        <li><a href="@Url.Action("Contact", "Home")" class="text-light text-decoration-none">Agendar Cita</a></li>
                    </ul>
                </div>

                <div class="col-md-3 mb-4">
                    <h5 class="mb-3">Contacto</h5>
                    <address class="small">
                        📍 Calle Ficticia 123, Ciudad, País<br>
                        📞 <a href="tel:+1234567890" class="text-light text-decoration-none">+1 234 567 890</a><br>
                        📧 <a href="mailto:contacto@miau-guau.com" class="text-light text-decoration-none">contacto@miau-guau.com</a>
                    </address>
                    <div>
                        <a href="#" class="text-light me-3 fs-4" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light me-3 fs-4" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-light me-3 fs-4" aria-label="YouTube"><i class="bi bi-youtube"></i></a>
                        <a href="#" class="text-light fs-4" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>

                <div class="col-md-2 mb-4">
                    <h5 class="mb-3">Suscríbete</h5>
                    <p class="small">Recibe ofertas y novedades directamente en tu correo.</p>
                    <form>
                        <div class="mb-3">
                            <input type="email" class="form-control form-control-sm" placeholder="Tu correo" required>
                        </div>
                        <button type="submit" class="btn btn-quartile btn-sm w-100">Suscribirse</button>
                    </form>
                </div>
            </div>

            <hr class="border-light">

            <div class="row">
                <div class="col text-center small">
                    &copy; 2025 Miau&Guau. Todos los derechos reservados.
                </div>
            </div>
        </div>
    </footer>
    @Html.Partial("_SweetAlert")

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="~/JavaScripts/Index.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
