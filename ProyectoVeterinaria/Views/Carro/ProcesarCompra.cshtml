
@model List<Dominio.Entidad.Entidad.Carro>


@{
    ViewBag.Title = "Resumen de Compra";
    decimal total = 0;
}

<h2>Resumen de tu compra</h2>

@if (Model.Count == 0)
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                total += item.SubTotal;
                <tr>
                    <td>
                        @if (item.Imagen != null)
                        {
                            var base64 = Convert.ToBase64String(item.Imagen);
                            <img src="data:image/png;base64,@base64" width="60" />
                        }
                    </td>
                    <td>@item.Nombre</td>
                    <td>$@item.Precio</td>
                    <td>@item.Cantidad</td>
                    <td>$@item.SubTotal</td>
                </tr>
            }
            <tr>
                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                <td><strong>$@total</strong></td>
            </tr>
        </tbody>
    </table>
    <a href="@Url.Action("ConfirmarCompra", "Carro")" class="btn btn-primary">Confirmar Pedido</a>

}
