@model IEnumerable<Dominio.Entidad.Entidad.ListadoProductos>

@{
    ViewBag.Title = "Lista de Productos";
}

<h2 class="mb-4 text-success">
    <i class="fas fa-paw"></i> Lista de Productos Veterinarios
</h2>

<div class="d-flex justify-content-end mb-3">
    <a href="@Url.Action("Create")" class="btn btn-outline-success">
        <i class="fas fa-plus-circle"></i> Agregar Producto
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm rounded">
        <thead class="table-success text-center">
            <tr>
                <th><i class="fas fa-barcode"></i><br />@Html.DisplayNameFor(model => model.IdProducto)</th>
                <th><i class="fas fa-tag"></i><br />@Html.DisplayNameFor(model => model.NombreProducto)</th>
                <th><i class="fas fa-image"></i><br />Imagen</th>
                <th><i class="fas fa-folder-open"></i><br />@Html.DisplayNameFor(model => model.Categoria)</th>
                <th><i class="fas fa-dollar-sign"></i><br />@Html.DisplayNameFor(model => model.Precio)</th>
                <th><i class="fas fa-boxes"></i><br />@Html.DisplayNameFor(model => model.Stock)</th>
                <th><i class="fas fa-toggle-on"></i><br />@Html.DisplayNameFor(model => model.NombreEstado)</th>
                <th><i class="fas fa-cogs"></i><br />Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.IdProducto</td>
                    <td>@item.NombreProducto</td>
                    <td class="text-center">
                       
                            <img src="data:image/png;base64,@item.ImagenBase64"
                                 class="img-thumbnail"
                                 style="width: 120px; height: 100px;"  onerror="this.onerror=null; this.src='/Imagenes/no-imagen.png';" />
                    </td>
                    <td>@item.Categoria</td>
                    <td>$@item.Precio.ToString("N2")</td>
                    <td>@item.Stock</td>
                    <td class="text-center">
                        @switch (item.NombreEstado)
                        {
                            case "Disponible":
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle"></i> Disponible
                                </span>
                                break;
                            case "Suspendido":
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-exclamation-triangle"></i> Suspendido
                                </span>
                                break;
                            case "Agotado":
                                <span class="badge bg-danger">
                                    <i class="fas fa-times-circle"></i> Agotado
                                </span>
                                break;
                            default:
                                <span class="badge bg-secondary">
                                    <i class="fas fa-question-circle"></i> Desconocido
                                </span>
                                break;
                        }
                    </td>

                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { id = item.IdProducto })" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Details", new { id = item.IdProducto })" class="btn btn-sm btn-outline-info me-1" title="Detalles">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.IdProducto })" class="btn btn-sm btn-outline-danger" title="Eliminar">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
