@model Dominio.Entidad.Entidad.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-paw"></i> Eliminar Producto</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar este producto?</h3>

            <div class="row">
                <!-- Detalles del producto -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdProducto)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdProducto)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreProducto)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreProducto)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreCategoria)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCategoria)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                        <dd class="col-sm-8">$ @Html.DisplayFor(model => model.Precio)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreEstado)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreEstado)</dd>
                    </dl>
                </div>

                <!-- Imagen del producto (si está disponible) -->
                <div class="col-md-6 text-center">
                    <h5><i class="fas fa-image"></i> Imagen del Producto</h5>
                    <img src="@(string.IsNullOrEmpty(Model.ImagenBase64) ? "/ruta/imagen-default.png" : $"data:image/png;base64,{Model.ImagenBase64}")"
                         class="img-fluid rounded shadow-sm" style="width:400px; height:250px;" onerror="this.onerror=null; this.src='/Imagenes/no-imagen.png';" />
                </div>
            </div>

            <hr />

            <!-- Mensaje de confirmación -->
            <div class="alert alert-warning text-center" role="alert">
                <strong><i class="fas fa-exclamation-triangle"></i> Advertencia:</strong> Una vez que elimines este producto, no podrás revertir esta acción.
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group text-center">
                    <input type="submit" value="Eliminar Producto" class="btn btn-danger btn-lg" />
                    <a href="@Url.Action("ListaProductos")" class="btn btn-secondary btn-lg ml-2"><i class="fas fa-arrow-left"></i> Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>
