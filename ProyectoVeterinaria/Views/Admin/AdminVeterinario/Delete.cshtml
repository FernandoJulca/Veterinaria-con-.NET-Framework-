@model Dominio.Entidad.Entidad.Veterinario

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Veterinarios";
    ViewBag.Title = "Eliminar Veterinario";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-paw"></i> Eliminar Veterinario</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar este Veterinario?</h3>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdVeterinario)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdVeterinario)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Apellido)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Especialidad)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Especialidad)</dd>

                    </dl>
                </div>

                <div class="col-md-6 text-center">
                    <h5><i class="fas fa-image"></i> Imagen del Veterinario</h5>
                    <img              src="@(string.IsNullOrEmpty(Model.ImagenBase64)
? $"/imagenes/Veterinarios/V{Model.IdVeterinario}.jpg"
: $"data:image/png;base64,{Model.ImagenBase64}")"
                         class="img-fluid rounded shadow-sm" style="width:400px; height:250px;" onerror="this.onerror=null; this.src='/Imagenes/no-imagen.png';" />
                </div>
            </div>

            <hr />

            <!-- Mensaje de confirmación -->
            <div class="alert alert-warning text-center" role="alert">
                <strong><i class="fas fa-exclamation-triangle"></i> Advertencia:</strong> Una vez que elimines este Veterinario, no podrás revertir esta acción.
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group text-center">
                    <input type="submit" value="Eliminar Veterinario" class="btn btn-danger btn-lg" />
                    <a href="@Url.Action("ListaVeterinario")" class="btn btn-secondary btn-lg ml-2"><i class="fas fa-arrow-left"></i> Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>
