@model Dominio.Entidad.Entidad.Veterinario

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Veterinarios";
    ViewBag.Title = "Detalles del Veterinario";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h2><i class="fas fa-paw"></i> Detalles del Veterinario</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Detalles del Veterinario -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.IdVeterinario)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.IdVeterinario)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Apellido)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Especialidad)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Especialidad)</dd>
                    </dl>
                </div>

                <!-- Imagen del Veterinario -->
                <div class="col-md-6 text-center">
                    <h5><i class="fas fa-image"></i> Imagen del Veterinario</h5>
                    <img              src="@(string.IsNullOrEmpty(Model.ImagenBase64)
? $"/imagenes/Veterinarios/V{Model.IdVeterinario}.jpg"
: $"data:image/png;base64,{Model.ImagenBase64}")"
                         class="img-fluid rounded shadow-sm" style="width:400px; height:250px;" onerror="this.onerror=null; this.src='/Imagenes/no-imagen.png';" />
                </div>
            </div>

            <div class="text-center mt-4">
                <a class="btn btn-primary me-2" href="@Url.Action("Edit", new { id = Model.IdVeterinario })">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a class="btn btn-secondary" href="@Url.Action("ListaVeterinario")">
                    <i class="fas fa-arrow-left"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>
