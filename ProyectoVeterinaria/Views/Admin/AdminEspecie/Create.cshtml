@model Dominio.Entidad.Entidad.Especie

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Especies";
    ViewBag.Title = "Agregar Especie";
}

<h2 class="mb-4"><i class="fas fa-plus-circle text-success"></i> Agregar Especie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">Información de la Especie</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.NombreEspecie, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.NombreEspecie, new { @class = "form-control", placeholder = "Ingrese el nombre de la especie" })
                <div>
                    @Html.ValidationMessageFor(model => model.NombreEspecie, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="card-footer bg-white text-end">
            <a href="@Url.Action("ListaEspecie")" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.mensaje as string))
{
    <div class="alert alert-info mt-3">
        @ViewBag.mensaje
    </div>
}