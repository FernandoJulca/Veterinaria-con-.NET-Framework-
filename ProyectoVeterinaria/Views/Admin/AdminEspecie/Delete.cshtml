@model Dominio.Entidad.Entidad.Especie

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Especies";
    ViewBag.Title = "Eliminar Especie";
}

<h2 class="mb-4 text-danger"><i class="fas fa-trash-alt"></i> Eliminar Especie</h2>

<div class="alert alert-warning" role="alert">
    <h5><i class="fas fa-exclamation-triangle"></i> ¿Estás seguro que deseas eliminar esta Especie?</h5>
    <p class="mb-0">Esta acción no se puede deshacer.</p>
</div>

<div class="card shadow-sm border-0 mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.IdEspecie)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IdEspecie)
            </dd>

            <dt class="col-sm-4 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.NombreEspecie)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NombreEspecie)
            </dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-end">
        <a href="@Url.Action("ListaEspecie")" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Cancelar
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Eliminar
        </button>
    </div>
}
