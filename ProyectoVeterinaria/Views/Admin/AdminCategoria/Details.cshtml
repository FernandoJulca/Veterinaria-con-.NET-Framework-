@model Dominio.Entidad.Entidad.Categoria

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Categorias";
    ViewBag.Title = "Detalles de Categoría";
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h2 class="mb-4 text-primary">
            <i class="fas fa-info-circle"></i> Detalles de la Categoría
        </h2>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.IdCategoria)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdCategoria)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NombreCategoria)
            </dd>
        </dl>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a href="@Url.Action("Edit", new { id = Model.IdCategoria })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="@Url.Action("ListaCategoria")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
