@model IEnumerable<Dominio.Entidad.Entidad.Servicio>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Servicios";
    ViewBag.Title = "Lista de Servicio";
}

<div class="d-flex justify-content-between mb-3">
    <div aria-label="Paginación de productos" class="mt-3">
        <div class="pagination justify-content-center gap-1">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <button type="button"
                        class="btn btn-sm mx-1 btn-pagina button-paginado @(i == ViewBag.CurrentPage ? "pagina-activa" : "")"
                        onclick="window.location='@Url.Action("ListaServicio", new { page = i })'">
                    @i
                </button>
            }
        </div>
    </div>
    <div class="d-flex align-items-center">
        <a href="@Url.Action("Create")" class="btn btn-outline-success">
            <i class="fas fa-plus-circle"></i> Agregar Servicio
        </a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm rounded">
        <thead class="table-success text-center">
            <tr>
                <th><i class="fas fa-hashtag"></i><br />@Html.DisplayNameFor(model => model.First().IdServicio)</th>
                <th><i class="fas fa-paw"></i><br />@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                <th><i class="fas fa-cogs"></i><br />Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.IdServicio</td>
                    <td>@item.Descripcion</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { id = item.IdServicio })" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Details", new { id = item.IdServicio })" class="btn btn-sm btn-outline-info me-1" title="Detalles">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.IdServicio })" class="btn btn-sm btn-outline-danger" title="Eliminar">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
