@model Dominio.Entidad.Entidad.Servicio

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Servicios";
    ViewBag.Title = "Detalles del Servicio";
}

<div class="card shadow-sm border-0 my-4">
    <div class="card-header bg-info text-white">
        <h2 class="mb-0"><i class="fas fa-info-circle"></i> Detalles del Servicio</h2>
    </div>

    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-4 fw-bold">
                <i class="fas fa-hashtag"></i> Código de Servicio
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IdServicio)
            </dd>

            <dt class="col-sm-4 fw-bold">
                <i class="fas fa-clipboard-list"></i> Descripción
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a href="@Url.Action("Edit", new { id = Model.IdServicio })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="@Url.Action("ListaServicio")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
