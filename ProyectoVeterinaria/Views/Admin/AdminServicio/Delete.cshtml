@model Dominio.Entidad.Entidad.Servicio

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Servicios";
    ViewBag.Title = "Eliminar Servicio";
}

<div class="card shadow-sm border-0 my-4">
    <div class="card-header bg-danger text-white">
        <h2 class="mb-0"><i class="fas fa-trash-alt"></i> Eliminar Servicio</h2>
    </div>

    <div class="card-body p-4">
        <h5 class="text-danger fw-bold">
            <i class="fas fa-exclamation-triangle"></i> ¿Estás seguro que deseas eliminar este servicio?
        </h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-4 fw-bold"><i class="fas fa-hashtag"></i> Código de Servicio</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.IdServicio)</dd>

            <dt class="col-sm-4 fw-bold"><i class="fas fa-clipboard-list"></i> Descripción</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-end gap-2 mt-4">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a href="@Url.Action("ListaServicio")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>
