@model Dominio.Entidad.Entidad.Especialidad

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Menu = "Especialidades";
    ViewBag.Title = "Editar Especialidad";
}

<h2 class="mb-4"><i class="fas fa-edit text-warning"></i> Editar Especialidad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">Modificar datos</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.IdEspecialidad, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.IdEspecialidad, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.IdEspecialidad, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.NombreEspecialidad, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.NombreEspecialidad, new { @class = "form-control", placeholder = "Nombre de la especialidad" })
                @Html.ValidationMessageFor(model => model.NombreEspecialidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="card-footer bg-white text-end">
            <a href="@Url.Action("ListaEspecialidad")" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.mensaje as string))
{
    <div class="alert alert-info mt-3">
        @ViewBag.mensaje
    </div>
}