@{
    Layout = null;
    ViewBag.Title = "IniciarSesion";
}




<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Fredoka One', cursive;
        background-size: cover;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
    }

        .card h2 {
            color: #6A0DAD;
        }

    label {
        color: #6A0DAD;
    }

    .btn {
        background-color: #6A0DAD;
        color: white;
    }

        .btn:hover {
            background-color: #7A0DAD;
        }

    #toggleContrasenia {
        color: #4E342E;
    }

    .logo-link img {
        width: 80px;
        height: auto;
    }

    .form-control {
        border-radius: 10px;
    }

    .carousel-item img {
        object-fit: cover;
    }

    .link {
        color: #6A0DAD;
    }

        .link:hover {
            color: #7A0DAD;
            text-decoration: none;
        }

    input[type="password"] {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
    }


        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear,
        input[type="password"]::-webkit-credentials-auto-fill-button,
        input[type="password"]::-webkit-Contrasenia-toggle-button {
            display: none !important;
        }
</style>

<div class="d-flex overflow-hidden vh-100" style="background-color: #ccc;">
    <div class="logo-container position-absolute d-inline-flex align-items-center ml-3 mt-3">
        <a href="@Url.Action("Index", "Home")"
           class="logo-link d-flex justify-content-center align-items-center ml-4" style="text-decoration: none;">
            <img src="~/imagenes/logo.png" alt="Logo" style="width:200px;" />
        </a>
    </div>

    <div class="d-flex justify-content-center align-items-center" style="flex: 1;">
        <div class="card shadow-lg w-100" style="max-width: 400px;">
            <div class="card-body">
                <h2 class="text-center"><i class="fas fa-paw"></i> Iniciar Sesión</h2>
                @using (Html.BeginForm("IniciarSesion", "Usuario", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Correo">🦁 Usuario</label>
                        <input type="text" id="Correo" name="Correo" class="form-control" placeholder="Ingresa tu usuario" required />
                    </div>
                    <div class="form-group">
                        <label for="Contrasenia">🔒 Contraseña</label>
                        <div class="input-group">
                            <input type="password" name="Contrasenia" class="form-control" id="Contrasenia" placeholder="Contraseña" required />
                            <div class="input-group-append">
                                <button class="btn" type="button" id="toggleContrasenia">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-block"><i class="fas fa-sign-in-alt"></i> Iniciar sesión</button>
                }

                <div class="mt-3 text-center">
                    <p>¿No tienes cuenta? <a href="@Url.Action("Registro", "Usuario")" class="link">Regístrate aquí 🐾</a>.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex vh-100" style="flex: 1;">
        <div id="carouselExampleAutoplaying" class="carousel slide h-100 w-100">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/imagenes/banner_1.jpg" class="d-block w-100 h-100" alt="Animal 1">
                </div>
                <div class="carousel-item">
                    <img src="~/imagenes/banner_2.jpg" class="d-block w-100 h-100" alt="Animal 2">
                </div>
                <div class="carousel-item">
                    <img src="~/imagenes/banner_3.jpg" class="d-block w-100 h-100" alt="Animal 3">
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@Html.Partial("_SweetAlert")

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#carouselExampleAutoplaying').carousel({
            interval: 3000,
            ride: 'carousel',
            pause: false
        });
    });
</script>

<script>
    const toggleContrasenia = document.getElementById('toggleContrasenia');
    const ContraseniaField = document.getElementById('Contrasenia');

    toggleContrasenia.addEventListener('click', function () {
        const type = ContraseniaField.type === 'password' ? 'text' : 'password';
        ContraseniaField.type = type;
        this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
    });
</script>
